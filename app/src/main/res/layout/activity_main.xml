<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
//test

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_modul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="%"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="1"
                    app:layout_constraintBottom_toTopOf="@+id/button_modul"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp" />
                //asd

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="0"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button_modul"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2"
                    app:layout_constraintBottom_toTopOf="@+id/button_0"
                    app:layout_constraintStart_toEndOf="@+id/button_1"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button_0"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="3"
                    app:layout_constraintBottom_toTopOf="@+id/button_dot"
                    app:layout_constraintStart_toEndOf="@+id/button_2"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="5"
                    app:layout_constraintBottom_toTopOf="@+id/button_2"
                    app:layout_constraintStart_toEndOf="@+id/button_4"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    app:layout_constraintBottom_toTopOf="@+id/button_1"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    app:layout_constraintBottom_toTopOf="@+id/button_4"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="8"
                    app:layout_constraintBottom_toTopOf="@+id/button_5"
                    app:layout_constraintStart_toEndOf="@+id/button_7"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_AND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="AND"
                    app:layout_constraintBottom_toTopOf="@+id/button_clear"
                    app:layout_constraintStart_toEndOf="@+id/button_OR"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="C"
                    app:layout_constraintBottom_toTopOf="@+id/button_8"
                    app:layout_constraintStart_toEndOf="@+id/button23"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="-"
                    app:layout_constraintBottom_toTopOf="@+id/button_plus"
                    app:layout_constraintStart_toEndOf="@+id/button_6"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="*"
                    app:layout_constraintBottom_toTopOf="@+id/button_minus"
                    app:layout_constraintStart_toEndOf="@+id/button_9"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="/"
                    app:layout_constraintBottom_toTopOf="@+id/button_multi"
                    app:layout_constraintStart_toEndOf="@+id/button_back"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_XOR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="XOR"
                    app:layout_constraintBottom_toTopOf="@+id/button_div"
                    app:layout_constraintStart_toEndOf="@+id/button_NOT"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="6"
                    app:layout_constraintBottom_toTopOf="@+id/button_3"
                    app:layout_constraintStart_toEndOf="@+id/button_5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="9"
                    app:layout_constraintBottom_toTopOf="@+id/button_6"
                    app:layout_constraintStart_toEndOf="@+id/button_8"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="back"
                    app:layout_constraintBottom_toTopOf="@+id/button_9"
                    app:layout_constraintStart_toEndOf="@+id/button_clear"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_NOT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="NOT"
                    app:layout_constraintBottom_toTopOf="@+id/button_back"
                    app:layout_constraintStart_toEndOf="@+id/button_AND"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CE"
                    app:layout_constraintBottom_toTopOf="@+id/button_7"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/button_OR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    app:layout_constraintBottom_toTopOf="@+id/button23"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="+"
                    app:layout_constraintBottom_toTopOf="@+id/button_enter"
                    app:layout_constraintStart_toEndOf="@+id/button_3"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="="
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button_dot"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

                <EditText
                    android:id="@+id/textview_result"
                    android:layout_width="384dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="12123"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton_menu"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="19dp" />

                <ImageButton
                    android:id="@+id/imageButton_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:layout_constraintStart_toEndOf="@+id/imageButton_menu"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="28dp" />

                <ImageButton
                    android:id="@+id/imageButton_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="138dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintTop_toBottomOf="@+id/textview_result"
                    tools:layout_editor_absoluteX="129dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/x" />
</LinearLayout>